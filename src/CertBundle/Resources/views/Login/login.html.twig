{% extends "CertBundle:Default:layout.html.twig" %} 
{% block contenido %}
    
    {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}
   
    <div class="col-md-6 col-md-offset-3">
        <img src= "{{asset('img/saludMadrid@0,5x.png')}}"></img>  
        <h3><span>IDENTIFICACIÓN DE USUARIO</span></h3>
        <div class="jumbotron" style="margin-top: 5%">
            <form id="form-reset-user" name="form-reset-user" class="form-signin" action="{{path("login_check")}}" method="post">
                <label for="usuario">Usuario</label>
                <input name="usuario"  label= 'Usuario' id="nombre-usuario" value='' type="text" class="form-control" >
                <br/>
                <label for="password">Contraseña</label>
                <input name="password" label='Contraseña' id="password" value='' type="password" class="form-control">
                <br/>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
            </form>
        </div>
    </div>
{% endblock %}